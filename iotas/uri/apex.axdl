import * from "@apexlang/core"

namespace "uri.v1"

interface Uri @service {
  parse(url: string): URI
}

type URI {
  scheme: string,
  host: string,
  host_segments: [string],
  port: u32?,
  path: string,
  path_segments: [string],
  path_extension: string,
  query: string,
  query_params: {string: string},
  fragment: string?,
  username: string?,
  password: string?,
}